{
  "name": "band-together",
  "version": "0.1.0",
  "description": "A band companion app for musicians",
  "private": true,
  "scripts": {
    "submodules": "git submodule update --init --recursive",
    "pull-all": "git submodule foreach git pull origin main",
    "push-all": "./scripts/push-all.sh",
    "stage-all": "./scripts/stage-all.sh",
    "commit-all": "./scripts/commit-all.sh",
    "sync-all": "./scripts/sync-all.sh",
    "install-all": "npm run submodules && cd client && bun install && cd ../api && bun install && cd ../db && bun install",
    "check": "./scripts/check-dirty.sh",
    "status": "git submodule foreach --quiet 'echo === $name === && git status --short'",
    "clean": "rm -rf client/node_modules api/node_modules db/node_modules"
  },
  "keywords": [
    "band",
    "music",
    "setlist",
    "rehearsal",
    "gig"
  ]
}