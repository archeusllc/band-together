{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "bun-types"
    ],
    "baseUrl": ".",
    "paths": {
      "@routes": [
        "./src/routes/index"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
      "@controllers": [
        "./src/controllers/index"
      ],
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@middleware": [
        "./src/middleware/index"
      ],
      "@middleware/*": [
        "./src/middleware/*"
      ],
      "@services": [
        "./src/services/index"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@config": [
        "./src/config/index"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@types": [
        "./src/types/index"
      ],
      "@types/*": [
        "./src/types/*"
      ],
      "@test": [
        "./test/index"
      ],
      "@test/*": [
        "./test/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}